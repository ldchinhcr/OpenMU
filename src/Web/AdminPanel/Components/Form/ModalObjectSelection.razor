@typeparam TItem

@inject IModalService _modalService;

<EditForm Model="@this">
  <CascadingValue Value="@this.PersistenceContext">
    <LookupField TObject="TItem" @bind-Value="@Item" Label="@typeof(TItem).Name"/>
  </CascadingValue>

  <button type="submit" @onclick="@SubmitAsync" class="btn-primary">Đồng ý</button>
  <button @onclick="@CancelAsync" class="btn-secondary">Hủy</button>
</EditForm>
